{{#with (hash
    checkbox-field=(component 'form-fields/checkbox-field' object=object update=update)
    checkbox-group=(component 'form-fields/checkbox-group' object=object update=update)
    color-field=(component 'form-fields/color-field' object=object update=update)
    date-field=(component 'form-fields/date-field' object=object update=update)
    datetime-field=(component 'form-fields/datetime-field' object=object update=update)
    datetime-local-field=(component 'form-fields/datetime-local-field' object=object update=update)
    email-field=(component 'form-fields/email-field' object=object update=update)
    file-field=(component 'form-fields/file-field' object=object update=update)
    hidden-field=(component 'form-fields/hidden-field' object=object update=update)
    month-field=(component 'form-fields/month-field' object=object update=update)
    number-field=(component 'form-fields/number-field' object=object update=update)
    password-field=(component 'form-fields/password-field' object=object update=update)
    radio-field=(component 'form-fields/radio-field' object=object update=update)
    radio-group=(component 'form-fields/radio-group' object=object update=update)
    range-field=(component 'form-fields/range-field' object=object update=update)
    search-field=(component 'form-fields/search-field' object=object update=update)
    select-field=(component 'form-fields/select-field' object=object update=update)
    tel-field=(component 'form-fields/tel-field' object=object update=update)
    text-field=(component 'form-fields/text-field' object=object update=update)
    textarea-field=(component 'form-fields/textarea-field' object=object update=update)
    time-field=(component 'form-fields/time-field' object=object update=update)
    url-field=(component 'form-fields/url-field' object=object update=update)
    week-field=(component 'form-fields/week-field' object=object update=update)

    custom-field=(component 'form-fields/custom-field' object=object update=update)

    reset=(component 'form-controls/reset' reset=(action reset object))
    submit=(component 'form-controls/submit' action=(action "submit" object))

    button=(component 'form-controls/button')
    ) as |formFields|}}
  {{#each customFormFields as |customFormField|}}
    {{form-for/merge-custom-form-field formFields
        name=customFormField.name
        component=(component customFormField.component object=object update=update)
    }}
  {{/each}}
  {{yield formFields}}
{{/with}}
