{{#form-field propertyName
    tagName="fieldset"
    class="radio-group"
    classNames=fieldClasses
    errorClasses=errorClasses
    hintClasses=hintClasses
    inputClasses=inputClasses
    labelClasses=labelClasses
    object=object
    hint=hint
    form=form
    label=label as |f|}}
  {{form-label f.labelText required=required tagName="legend"}}

  <ul>
    {{#each hashOptions as |option|}}
      {{#with (component 'form-fields/radio-field' propertyName option.value
        label=option.label
        disabled=disabled
        tagName="li"
        object=object
        hideErrors=true
        update=(action update)
      ) as |radioField|}}
        {{#if hasBlock}}
          {{yield (hash radio-field=radioField)}}
        {{else}}
          {{component radioField}}
        {{/if}}
      {{/with}}
    {{/each}}
  </ul>

  {{f.errors}}
  {{f.hint}}
{{/form-field}}
